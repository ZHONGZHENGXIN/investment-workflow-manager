# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/investment_workflow"

# 服务器配置
NODE_ENV=production
PORT=3000

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# 数据库连接配置
DB_CONNECTION_LIMIT=10
DB_QUERY_TIMEOUT=10000
DB_TRANSACTION_TIMEOUT=5000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000