{
  "name": "investment-workflow-backend",
  "version": "1.0.0",
  "description": "投资流程管理后端API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev:simple": "nodemon src/index.simple.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "node scripts/deploy.js",
    "postinstall": "npx prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "ts-node src/__tests__/runTestSuite.ts unit",
    "test:integration": "ts-node src/__tests__/runTestSuite.ts integration",
    "test:security": "ts-node src/__tests__/runTestSuite.ts security",
    "test:performance": "ts-node src/__tests__/runTestSuite.ts performance",
    "test:feature": "ts-node src/__tests__/runTestSuite.ts feature",
    "test:suite": "ts-node src/__tests__/runTestSuite.ts",
    "test:all": "ts-node src/__tests__/runTestSuite.ts all",
    "test:help": "ts-node src/__tests__/runTestSuite.ts help",
    "test:quality": "npm run test:unit && npm run test:integration && npm run test:security",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "npx prisma migrate reset && npm run db:seed",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "@prisma/client": "^5.6.0",
    "redis": "^4.6.10",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.8.10",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "prisma": "^5.6.0",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^3.0.3"
  },
  "keywords": ["investment", "workflow", "api", "nodejs", "typescript"],
  "author": "Investment Workflow Team",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}